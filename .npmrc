# Package manager configuration for JobPay Backend
# This file enforces pnpm usage and configures package management settings

# Enforce pnpm usage - prevents installation with npm or yarn
engine-strict=true

# pnpm configuration
auto-install-peers=true
strict-peer-dependencies=false
shamefully-hoist=true

# Security settings
audit-level=moderate

# Registry configuration (use official npm registry)
registry=https://registry.npmjs.org/

# Cache and store configuration
store-dir=~/.pnpm-store
cache-dir=~/.pnpm-cache

# Workspace configuration
link-workspace-packages=true
prefer-workspace-packages=true

# Performance optimizations
network-concurrency=16
child-concurrency=5

# Logging
loglevel=warn

# Package resolution
resolution-mode=highest

# Lockfile settings
lockfile-include-tarball-url=false
