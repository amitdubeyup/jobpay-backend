{
  "name": "jobpay-backend",
  "version": "1.0.0",
  "description": "JobPay Backend Application",
  "main": "dist/main.js",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "preinstall": "node scripts/enforce-pnpm.js",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "start:monitoring": "NODE_ENV=production NEW_RELIC_ENABLED=true node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:verbose": "VERBOSE_TESTS=true jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --coverage --watchAll=false --passWithNoTests --testPathIgnorePatterns='test/integration' --forceExit --detectOpenHandles",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests --testPathIgnorePatterns='test/integration' --forceExit --detectOpenHandles",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --config ./test/jest-integration.json",
    "test:integration:watch": "jest --config ./test/jest-integration.json --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "audit:security": "pnpm audit --audit-level moderate || true",
    "audit:licenses": "pnpm dlx license-checker --summary",
    "check:outdated": "pnpm outdated",
    "test:commit-msg": "node scripts/test-commit-msg.js",
    "pre-commit": "pnpm run lint:check && pnpm run format:check && pnpm run test:ci",
    "ci:full": "pnpm run pre-commit && pnpm run build && pnpm run audit:security",
    "docker:build": "docker build -t jobpay-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "prepare": "husky",
    "security:full": "pnpm run lint:security && pnpm run audit:deps && pnpm run test:security && pnpm run scan:secrets",
    "lint:security": "eslint '{src,test}/**/*.ts' --config .eslintrc.security.js",
    "audit:deps": "pnpm audit --audit-level moderate && pnpm dlx license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'",
    "test:security": "jest --testPathPattern=security --coverage",
    "scan:secrets": "pnpm dlx secretlint '**/*' --ignore-path .gitignore",
    "security:local": "pnpm run lint:security && pnpm run audit:deps"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^10.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@nestjs/bull": "10.0.1",
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.4.20",
    "@nestjs/graphql": "12.0.9",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mercurius": "^12.2.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "10.4.20",
    "@nestjs/throttler": "^6.4.0",
    "@newrelic/native-metrics": "^12.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.62.2",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.204.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.204.0",
    "@opentelemetry/instrumentation-graphql": "^0.51.0",
    "@opentelemetry/instrumentation-http": "^0.204.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-metrics": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "6.15.0",
    "bcrypt": "^6.0.0",
    "bullmq": "4.12.4",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "compression": "^1.8.1",
    "fastify": "^4.29.1",
    "graphql": "16.11.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.6",
    "ioredis": "5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "newrelic": "^13.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.2",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "10.0.0",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^10.4.20",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "29.5.5",
    "@types/node": "20.8.6",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "dotenv": "^17.2.2",
    "eslint": "8.51.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "29.7.0",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "prisma": "6.15.0",
    "supertest": "^7.1.4",
    "ts-jest": "29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.2"
  },
  "pnpm": {
    "overrides": {
      "ws": ">=8.17.1",
      "webpack": ">=5.94.0",
      "tmp": ">=0.2.4"
    }
  }
}
